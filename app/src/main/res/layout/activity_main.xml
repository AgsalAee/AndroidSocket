<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cornsilk"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Socket"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAlamatIpTujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Alamat IP Tujuan"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/txtNomorPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Nomor Port"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAlamatIpTujuan" />

    <TextView
        android:id="@+id/txtPesanDikirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Pesan Dikirim"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomorPort" />

    <EditText
        android:id="@+id/editIpTujuan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtAlamatIpTujuan"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editNoPort"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtNomorPort"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editIPTujuan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtPesanDikirim"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnKirimData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Kirim Data"
        app:layout_constraintEnd_toEndOf="@+id/editIPTujuan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>